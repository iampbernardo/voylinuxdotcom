
/** Styl imports */
@require "normalize.styl"
@import "lib/fonts.css"
@require "lib/positions.styl"
@require "lib/sizes.styl"
@require "lib/navigation.styl"

div,
footer,
article,
section,
header,
blockquote
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box


/**
  Variables
*/


/* fonts */
font_primary = 'open_sansregular'
font_primary_light = 'open_sanslight'

font_secundary = 'merriweatherregular'
font_secundary_bold = 'merriweatherbold'
font_secundary_italic = 'merriweatherlight_italic'



font_main_color = #333

/* colors */
brand_first = #00907C
brand_second = #0E4198
brand_third = #E69400
brand_fourth = #E65F00

dark_background = #3D3E41

color_links = #00907C
color_titles = #333
color_brand = #00907C

header_background = #0E4198
footer_background = #232323
footer_color = #EEE


input[type="text"],
textarea
  background: non
  border: 1px solid #CCC
  border-radius: 3px
  color: #555
  box-shadow : inset 0 0 3px 1px #EEE
  font-family: font_primary
  padding: .2em .3em
  &:focus
    border-color: color_brand

button,
.button
  background: none
  border: 1px solid #CCC
  border-radius: 3px

/* Styles */

html
  //background: #F9F9F9
  font-family: font_primary
  font-size: 16px
  color: font_main_color

a
  color: brand_fourth
  text-decoration: none
  font-weight: bold

header.main-header
  color: #FFF

header.blog-header
  background-image: url('../img/header_bg.jpg')
  background-position: center center
  background-size: cover
  min-height: 200px


footer.main-footer
  background-color: dark_background
  color: footer_color





.wrapper
  padding: 1em

.content-text
  font-size: 1.1em
  a
    &:hover
      border-bottom: 1px dotted
  i
    font-family: font_primary_light
  p
  //font-family: font_secundary
    line-height: 1.4
  img
    height: auto
    width: 100%
  blockquote
    font-family: font_primary_light
    color: lighten(font_main_color, 30%)
    padding: 1em
    margin-left: 0
    font-size: 1.5em
    width: 100%
    border-left: 3px solid #E6E6E6
  pre
    border: 1px solid #8D8D8D
    padding: 1em
    text-align: left

.profile-menu-boxes
  display: flex
  flex-direction: column
  .profile-box
    order: 2
    text-align: center
    img
      border: 1px solid #BBB
      width: 50%
    nav
      padding: 0
      ul
        display: flex
        align-content: center
        justify-content: center
        padding: 0
        li
          width: 45%
          a
            color: brand_fourth
            font-weight: bold
            font-size: 1.5em

  .top-nav
    background: #BBB
    order: 1
    ul
      display: flex
      flex-wrap: wrap
      justify-content: center
      li
        border-bottom: 1px solid #333
        flex-grow: 1
        flex-shrink: 1;
        flex-basis: 49%
        padding: .3em 0
        text-align: center
        transition: all 0.3s ease;
        &:hover
          background: #333
      li:nth-child(odd)
        border-right: 1px solid #333
        a
