<header id="main_header" class="full" style="background-image: url({{@blog.cover}})">
  <div class="center page_size full clearfix">
    <div class="top_buttons  padding clearfix top_bar">
      <a href="{{@blog.url}}/rss/" id="rss_button" class="left">
        <span class="fa fa-rss"> RSS</span>
      </a>
      <button id="menu_button" class="right">
        <i class="fa fa-bars"></i>
      </button>
    </div><!-- // end top buttons -->
    <p class="center main_title">{{tag.name}}</p>
  </div><!--//end centered -->
</header><!--// end main header -->

