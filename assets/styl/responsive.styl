@media only screen and (min-width: 800px)
  html
    font-size: 20px
  #primary_nav
    max-height: 1000px
    padding: 0
    ul
      padding: 0
      li
        border: none
        display: inline
        line-height: 0
        &:hover
          background: #FFF
        a
          line-height: 3em
          padding: 1em
          &:hover
            background-color: light_blue

@media only screen and (min-width: 1000px)

  h1
    text-align: left
