*
  box-sizing: border-box

/* Set html */
html
  font-family: serif_font
  font-size: base_font_size
  color: lighten(grey_dark, 10%)

/* Sizes and positions */

.full
  width: 100%

.page_size
  max-width: page_size

.center
  display: block
  margin: 0 auto

.left
  float: left

.right
  float: right

.clearfix
  clearfix()

.padding
  padding: 1em

/* Navigations */
.inline_nav
  ul
    padding: 0
    list-style: none
      li
        display: inline

/* shapes */
.round
  round()

h1,
h2,
h3,
h4,
h5,
h6
  font-family: sans_serif_font

h1
  text-align: center

button(bc, hc)
  font-family: sans_serif_font
  transition(all .3s linear)
  text-transform: uppercase
  background: none
  color: bc
  border: 1px solid
  border-color: bc
  border-radius: 3px
  font-weight: normal
  &:hover
    color: hc
    border-color: hc
  text-decoration: none
    span
      padding: .6em
